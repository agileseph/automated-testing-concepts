<?xml version="1.0" encoding="utf-8"?>
<document xmlns="http://maven.apache.org/DOCUMENT/1.0.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DOCUMENT/1.0.1 http://maven.apache.org/xsd/document-1.0.1.xsd"
	outputName="Project User Guide">
	
	<!-- see: https://maven.apache.org/doxia/doxia/doxia-core/document.html -->
	
	<meta>
		<title>Project documentation for ${project.name}</title>
		<authors>
			<author>
				<name>${project.developers[0].name}</name>
			</author>
		</authors>
		<description>${project.description}</description>
	</meta>
	<toc name="Table of contents" depth="5">
		<item name="APT Format" ref="/format.apt" />
		<item name="XDoc Example" ref="/xdoc.xml" />
		<item name="FAQ" ref="/faq.fml" />
	</toc>
	<cover>
		<coverTitle>${project.name}</coverTitle>
		<coverSubTitle>Project documentation</coverSubTitle>
		<coverVersion>${project.version}</coverVersion>
		<coverType>User Guide</coverType>
		<projectName>${project.name}</projectName>
		<projectLogo />
		<companyName>Copy Left</companyName>
		<companyLogo />
		<coverdate>${date}</coverdate>
	</cover>
</document>